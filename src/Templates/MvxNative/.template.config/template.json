    =========================================================================================== */
    "iOSMinSDKVersion": {
      "type": "parameter",
      "datatype": "choice",
      "defaultValue": "10.0",
      "description": "Minimum iOS SDK version.",
      "choices": [
        {
          "choice": "11.4",
          "description": "iOS 11.4"
