    "{00000000-0000-1111-0000-000000000002}", // Android Project
    "{00000000-0000-1111-0000-000000000003}", // iOS Project
    "{00000000-0000-1111-0000-000000000004}", // UWP Project
    "{00000000-0000-1111-0003-000000000002}", // Android shared Project
    "{00000000-0000-1111-0001-000000000001}", // Core Unit Test Project
    "{00000000-0000-1111-0001-000000000002}", // Android Unit Test Project
    "{00000000-0000-1111-0002-000000000002}", // Android UI Test Project
    "{00000000-0000-1111-0001-000000000003}", // iOS Unit Test Project
    "{00000000-0000-1111-0002-000000000003}", // iOS UI Test Project
    "{00000000-0000-1111-0001-000000000004}", // UWP Unit Test Project
    "{00000000-0000-1111-0002-000000000004}", // UWP UI Test Project
    "{00000001-0000-1111-0000-000000000000}", // Solution items folder
