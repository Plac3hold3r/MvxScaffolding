        }
      ]
    },
    "HasHyperion": {
      "type": "parameter",
      "datatype": "bool",
      "description": "Whether to include Hyperion, an in app design review tool, in the iOS project.",
      "defaultValue": "false"
    },
    "iOSLayoutType": {
      "type": "parameter",
      "datatype": "choice",
      "description": "The iOS project layout pattern to use.",
      "defaultValue": "fluent",
      "choices": [
        {
          "choice": "fluent",
          "description": "FluentLayout, a fluent API for creating constraint-based layouts."
        },
        {
          "choice": "storyboard",
          "description": "Storyboard, iOS layout format compatible with Xcode interface builder."
        }
      ]
    },
    /*
    || UWP project flags
    =========================================================================================== */
    "UWPAppDescription": {
      "type": "parameter",
      "datatype": "string",
      "defaultValue": "Laying the foundation with Mvx Scaffolding",
      "replaces": "UWP_APP_DESCRIPTION",
      "description": "The UWP application description."
    },
    "UWPMinSDKVersion": {
      "type": "parameter",
      "datatype": "choice",
      "defaultValue": "16299",
      "description": "Minimum UWP target SDK version.",
      "choices": [
        {
          "choice": "17134",
